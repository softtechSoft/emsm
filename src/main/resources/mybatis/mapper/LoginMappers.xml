<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.softtech.mappers.LoginMappers">

<!-- ログイン者IDとパスワードを取得-->
<select id="getOldPassword" parameterType="String" resultType="com.softtech.entity.LoginEntity">
        SELECT employeeID,password
        FROM employee
        WHERE mailAdress = #{mailAdress}
 </select>









</mapper>